<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="#dfdfdf" android:width="1dp" />
            <corners android:radius="4dp" />
            <solid android:color="@color/app_main_color" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="4dp" />
                    <solid android:color="@color/btn_ok_color" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/chk_icon" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
        </layer-list>
    </item>
</selector>