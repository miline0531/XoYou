<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:seekcircle="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_test"
                android:fontFamily="@font/gowunbatang_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/fragment_detail_6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:fontFamily="@font/gowunbatang_regular"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="7dp"
                android:textColor="@color/mong_grey_default"
                android:text="@string/fragment_detail_7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.CombinedChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginVertical="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/text_size_body"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/mong_grey_default"
                    android:text="@string/fragment_detail_8"/>

                <TextView
                    android:id="@+id/label_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/text_size_body"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/mong_grey_default"
                    android:text="@string/fragment_detail_9"/>
                <TextView
                    android:id="@+id/txt_result_point1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#F8C837"
                    android:text="@string/fragment_detail_10"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_marginVertical="15dp"
            android:background="#1AFFFFFF">
            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/barchart2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/mong_grey_default"
                android:text="@string/fragment_detail_11"/>
            <TextView
                android:id="@+id/label_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/mong_grey_default"
                android:text="@string/fragment_detail_12"/>
            <TextView
                android:id="@+id/txt_result_point2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="#F8C837"
                android:text="@string/fragment_detail_10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">
            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/barchart3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="15dp"/>

            <TextView
                android:id="@+id/label_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/mong_grey_default"
                android:text="@string/fragment_detail_12"/>
            <TextView
                android:id="@+id/txt_result_point3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="#F8C837"
                android:text="@string/fragment_detail_10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_marginVertical="15dp"
            android:background="#1AFFFFFF">
            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/barchart4"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="15dp"/>

            <TextView
                android:id="@+id/label_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/mong_grey_default"
                android:text="@string/fragment_detail_12"/>
            <TextView
                android:id="@+id/txt_result_point4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gowunbatang_regular"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_size_body"
                android:lineSpacingExtra="4dp"
                android:textColor="#F8C837"
                android:text="@string/fragment_detail_10"/>

        </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
