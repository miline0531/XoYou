<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_space"/>

    <com.jetradarmobile.snowfall.SnowfallView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:snowflakeAlphaMax="30"
        app:snowflakeAlphaMin="20"
        app:snowflakeAngleMax="5"
        app:snowflakeSizeMax="10dp"
        app:snowflakeSizeMin="2dp"
        app:snowflakeSpeedMax="3"
        app:snowflakeSpeedMin="1"
        app:snowflakesAlreadyFalling="false"
        app:snowflakesFadingEnabled="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#994F3651"
            android:layout_centerInParent="true">
            <TextView
                style="@style/text_semibold"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="xoYou 로그인"
                android:textColor="#ffffff"
                android:textSize="24dp"/>
            <TextView
                style="@style/text_semibold"
                android:id="@+id/text_top_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="xoYou........."
                android:textColor="#ffffff"
                android:textSize="14dp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:background="@drawable/shape_line_bottom_white_1px"
                android:layout_marginHorizontal="50dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextColor="@color/white"
                app:boxStrokeColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@font/gowunbatang_regular"
                app:endIconMode="none">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_id_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="아이디"
                    android:textColorHint="@color/white"
                    android:clickable="true"
                    android:enabled="true"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:background="@drawable/shape_line_bottom_white_1px"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextColor="@color/white"
                app:boxStrokeColor="@color/white"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@font/gowunbatang_regular"
                app:endIconMode="none">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_pw_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="비밀번호"
                    android:textColorHint="@color/white"
                    android:clickable="true"
                    android:enabled="true"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/text_semibold"
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:background="@drawable/button_square_maincolor2_shape"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="8dp"
                android:gravity="right|center_vertical">
                <TextView
                    style="@style/text_regular"
                    android:id="@+id/findid_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_tooltip"
                    android:text="아이디 찾기" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:background="#AFAFAF"
                    android:layout_marginHorizontal="10dp" />

                <TextView
                    style="@style/text_regular"
                    android:id="@+id/findpw_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_tooltip"
                    android:text="비밀번호 찾기"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="52dp"
                android:paddingBottom="60dp"
                android:gravity="bottom|center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        style="@style/text_regular"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_tooltip"
                        android:text="아직 회원이 아니신가요 ?" />

                    <TextView
                        style="@style/text_semibold"
                        android:id="@+id/signup_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp"
                        android:text="회원가입하기"
                        android:textColor="@color/btn_ok_color"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_tooltip"
                    android:text="Copyright RedRover. All rights reserved."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_tooltip"
                    android:text="프로버전 고객센터 : 02-2156-0137"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_intro_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@mipmap/ic_app"/>
        <TextView
            style="@style/text_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="xoYou"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</RelativeLayout>