<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".activity.main.HomeLeftFragment">
    <RelativeLayout
        android:id="@+id/frag_home_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:visibility="gone">
        <ImageView
            android:id="@+id/frag_home_refresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/img_refresh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fragment_home_submit"
            android:textColor="@color/color_yellow"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_keyword"
        android:layout_below="@+id/frag_home_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6AFAFAF"
        android:fontFamily="@font/gowunbatang_regular"
        android:gravity="top|left"
        android:hint="@string/fragment_home_keyword_2"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#0F0F0F"
        android:textSize="@dimen/text_size_18" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/inputLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/btn_ok_color"
            android:fontFamily="@font/gowunbatang_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/200"
            android:textColor="@color/app_disable_text_color"
            android:fontFamily="@font/gowunbatang_regular"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_mic"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_round_10dp_stroke_4a4a4a"
        android:padding="11dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_mic" />
    </RelativeLayout>

</RelativeLayout>