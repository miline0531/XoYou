<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btnNext"
            style="@style/text_semibold"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/bg_round_10dp_6b5e6c"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button"
            android:text="@string/activity_finger_idreg_cancel" />

        <LinearLayout
            android:id="@+id/info_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="40dp"
            android:layout_above="@id/btnNext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ico_bullet_dot_h_8" />

            <TextView
                style="@style/text_regular"
                android:text="@string/activity_finger_idreg_0"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="4dp"
            android:layout_above="@id/info_2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ico_bullet_dot_h_8" />

            <TextView
                style="@style/text_regular"
                android:text="@string/activity_finger_idreg_1"
                android:textColor="@color/black"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="24dp"
            android:layout_above="@id/info_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/simple_reg_title"
                    style="@style/text_semibold"
                    android:text="@string/activity_finger_idreg_2"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <LinearLayout
                    android:id="@+id/simple_reg_button"
                    android:layout_marginTop="64dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="center">


                    <LinearLayout
                        android:id="@+id/btn_fido"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bg_round_10dp_fe9700"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_ico_finger_h_48"/>
                        <TextView
                            style="@style/text_semibold"
                            android:layout_marginTop="8dp"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:text="@string/activity_finger_idreg_regist" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>