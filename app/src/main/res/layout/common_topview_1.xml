<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/common_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#000000" >

        <ImageView
            android:id="@+id/common_left_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:background="#000000"
            android:paddingBottom="5dp"
            android:src="@drawable/icon_write_w" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/common_title_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022년01월27일 10시(목)"
                android:textColor="#ffffff"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/common_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강 감순님과 마구만 관계분석"
                android:textColor="#ffffff"
                android:textSize="18dp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/common_right_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:background="#000000"
            android:src="@drawable/img_cal" />


    </RelativeLayout>

</RelativeLayout>