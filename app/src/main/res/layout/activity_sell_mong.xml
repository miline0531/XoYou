<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SellMongActivity"
    android:orientation="vertical"
    android:background="@color/app_main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:layout_marginBottom="5dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back" />

        <TextView
            style="@style/text_semibold"
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="판매하기"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"/>
    </RelativeLayout>

    <TextView
        style="@style/text_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매유형"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_fixed"
            style="@style/text_semibold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/btn_ok_color"
            android:textSize="@dimen/text_size_body"
            android:text="고정가"/>
        <TextView
            android:id="@+id/btn_bid"
            style="@style/text_semibold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/txt_disable"
            android:textColor="@color/app_disable_text_color"
            android:textSize="@dimen/text_size_body"
            android:text="경매"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_round_10dp_2e1230"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icon_tabbar_find_inactive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowunbatang_regular"
                android:text="판매기간"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_sdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_round_10dp_6b5e6c">
            <TextView
                style="@style/text_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="시작일 : "
                android:textSize="@dimen/text_size_body"
                android:gravity="center"/>

            <TextView
                style="@style/text_regular"
                android:id="@+id/text_startdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_body"
                android:text="2022-01-12 11:13:59"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_edate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_round_10dp_6b5e6c">
            <TextView
                style="@style/text_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="종료일 : "
                android:textSize="@dimen/text_size_body"
                android:gravity="center"/>

            <TextView
                style="@style/text_regular"
                android:id="@+id/text_enddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2022-01-12 11:13:59"
                android:textSize="@dimen/text_size_body"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_round_10dp_2e1230"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icon_tabbar_find_inactive" />

            <TextView
                android:id="@+id/text_selltype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowunbatang_regular"
                android:text="판매가격"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_round_10dp_6b5e6c">

            <EditText
                style="@style/text_regular"
                android:id="@+id/edt_price"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#00000000"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="@color/white"
                android:inputType="phone"
                android:hint="판매 가격을 입력하세요"
                android:textColorHint="@color/app_disable_text_color"
                android:textSize="@dimen/text_size_body"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_round_10dp_2e1230"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icon_tabbar_find_inactive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gowunbatang_regular"
                android:text="거래수수료"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2 MVC (2000원)"
                android:textSize="@dimen/text_size_body"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        style="@style/text_semibold"
        android:id="@+id/btn_enter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/btn_ok_color"
        android:textColor="@color/white"
        android:text="등록하기"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_button"/>

</LinearLayout>