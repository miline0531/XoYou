<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regist_dialog_0"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/comment_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dip"
            android:text="@string/regist_dialog_1"
            android:textColor="#222222"
            android:textSize="@dimen/text_size_tooltip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/left_button_text_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_10dp_6b5e6c"
                android:gravity="center"
                android:text="@string/regist_dialog_no"
                android:textColor="@color/app_disable_text_color"
                android:textSize="@dimen/text_size_button"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/right_button_text_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_10dp_fe9700"
                android:layout_toLeftOf="@+id/right_button_text_view"
                android:fontFamily="sans-serif"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/regist_dialog_yes"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>