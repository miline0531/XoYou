<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/my_you_back"
    tools:context=".activity.detail.MyMongRegistActivity">
    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bilnd_black"
        android:paddingHorizontal="24dp"
        android:paddingVertical="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_mong_regist_title"
            android:textColor="#80e0e0e0"
            android:textSize="@dimen/text_size_title" />

    </RelativeLayout>
    <ScrollView android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bilnd_black"
        tools:context=".activity.detail.MyMongRegistActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="#80FFFFFF"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:text="@string/activity_mong_regist_title"
                    android:textSize="@dimen/text_size_body"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:paddingHorizontal="20dp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/bilnd_black"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:text="@string/activity_mong_regist_content"
                    android:textSize="@dimen/text_size_body"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_pyeongga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#80FFFFFF"
                android:orientation="vertical"
                android:padding="10dp">
                <EditText
                    android:id="@+id/edt_pyeongga"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:text=""
                    android:textSize="@dimen/text_size_body"
                    android:background="@null"
                    android:hint="@string/activity_mong_regist_impression"
                    android:gravity="top"
                    android:layout_marginVertical="5dp"
                    android:textColorHint="@color/grey"
                    android:paddingVertical="20dp"
                    android:textColor="@color/black"
                    android:paddingHorizontal="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/bilnd_black"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_icon_tabbar_find_inactive" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:text="@string/activity_mong_regist_0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_body" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/btn_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_10dp_fe9700"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:text="@string/activity_mong_regist_gallery"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/save_image_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/save_card_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/dummyivew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:layout_toRightOf="@id/save_card_image"/>
                    <ImageView
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_close_w"
                        android:layout_toLeftOf="@id/dummyivew"
                        android:layout_margin="10dp"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_mymong_regist_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_select_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#80FFFFFF"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/btn_cb_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_1_1"
                        android:enabled="false"
                        android:background="@drawable/bg_checkbox2"
                        android:button="@android:color/transparent"
                        android:buttonTint="@color/white"
                        android:textColor="#eeeeee"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="@string/activity_mong_regist_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#424242"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:textSize="18dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cb_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_1_2"
                        android:enabled="false"
                        android:background="@drawable/bg_checkbox2"
                        android:button="@android:color/transparent"
                        android:buttonTint="@color/white"
                        android:textColor="#eeeeee"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="@string/activity_mong_regist_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#424242"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:textSize="18dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cb_1_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_1_3"
                        android:enabled="false"
                        android:background="@drawable/bg_checkbox2"
                        android:button="@android:color/transparent"
                        android:buttonTint="@color/white"
                        android:textColor="#eeeeee"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="@string/activity_mong_regist_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#424242"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:textSize="18dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_select_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txt_select_color"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/activity_mong_regist_5"
                    android:textSize="16sp"
                    android:textColorHint="#9e9e9e"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic__3_icon_24_arrow_d_white" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#e0e0e0"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/btn_select_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_select_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/activity_mong_regist_5"
                    android:textColorHint="#9e9e9e"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic__3_icon_24_arrow_d_white" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#e0e0e0"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/btn_select_3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txt_select_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:hint="@string/activity_mong_regist_7"
                    android:textSize="16sp"
                    android:textColorHint="#9e9e9e"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic__3_icon_24_arrow_d_white" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#e0e0e0"
                android:layout_height="1dp" />


            <LinearLayout
                android:id="@+id/layout_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#80FFFFFF"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/btn_essential1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_essential1"
                        android:enabled="false"
                        android:background="@drawable/bg_checkbox2"
                        android:button="@android:color/transparent"
                        android:buttonTint="@color/white"
                        android:textColor="#eeeeee"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#424242"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:textSize="18dp"
                        android:text="@string/activity_mong_regist_9"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_essential2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_essential2"
                        android:enabled="false"
                        android:background="@drawable/bg_checkbox2"
                        android:button="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:textColor="#424242"
                        android:layout_marginLeft="10dp"
                        android:text="@string/activity_mong_regist_10"
                        android:textSize="18dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_essential3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cb_essential3"
                        android:enabled="false"
                        android:background="@drawable/bg_checkbox2"
                        android:button="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gowunbatang_regular"
                        android:textColor="#424242"
                        android:layout_marginLeft="10dp"
                        android:text="@string/activity_mong_regist_11"
                        android:textSize="18dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bilnd_black">
        <LinearLayout
            android:id="@+id/btn_back"
            android:clickable="true"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_left_36" />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_mymong_regist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/gowunbatang_regular"
            android:text="@string/activity_mong_regist_12"
            android:textSize="18dp"
            android:textColor="#9e9e9e"
            android:gravity="center"/>

    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>

