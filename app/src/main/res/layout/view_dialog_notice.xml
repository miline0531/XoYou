<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/rl_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C68B9" >
        <TextView
            android:id="@+id/notice_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/notice_dialog_title"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <TextView
        android:id="@+id/notice_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_topbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="20dp"
        android:text="@string/notice_dialog_message"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/notice_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_message"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="1dp"
        android:paddingTop="1dp"
        android:text="@string/notice_dialog_message2"
        android:textColor="#ed0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notice_message3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_message"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/notice_message2"
        android:paddingTop="1dp"
        android:text="@string/notice_dialog_message3"
        android:textColor="#000000"/>
	
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_message2"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|right" >
        <Button android:id="@+id/btn_notice_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_round_10dp_fe9700" />
        
        <Button android:id="@+id/btn_notice_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_round_10dp_fe9700" />
    </LinearLayout>
	
</RelativeLayout>