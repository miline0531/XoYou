<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:padding="15dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/gowunbatang_bold"
                android:text="@string/activity_keyword_input_title"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_mymong_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_round_10dp_fe9700"
            android:padding="11dp">
            <TextView
                style="@style/text_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="@string/activity_keyword_input_submit"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/btn_mymong_submit">

            <LinearLayout
                android:id="@+id/tabLayout"
                android:background="@color/app_main_color_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/btn_keyword_selectbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_keyword1"
                        style="@style/text_semibold"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:text="@string/activity_keyword_input_keyword"
                        android:paddingVertical="8dp"/>
                    <View
                        android:id="@+id/view_under_line1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/btn_ok_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_keyword_inputbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_keyword2"
                        style="@style/text_semibold"
                        android:textSize="16dp"
                        android:textColor="@color/app_disable_text_color"
                        android:text="@string/activity_keyword_input_story"
                        android:paddingVertical="8dp"/>
                    <View
                        android:id="@+id/view_under_line2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:visibility="invisible"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/btn_ok_color"/>

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tabLayout">

                <LinearLayout
                    android:id="@+id/home_content_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/select_box_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_round_10dp_2e323b"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/select_box_txt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:fontFamily="@font/gowunbatang_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/activity_keyword_input_0"
                            android:paddingHorizontal="19dp"
                            android:textColor="@color/white"
                            android:textColorHint="#96a1ae"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="19dp"
                            android:background="@drawable/ic__3_icon_24_arrow_d_white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/select_box_2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_round_10dp_2e323b"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/select_box_txt_2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:paddingHorizontal="19dp"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gowunbatang_regular"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:hint="@string/activity_keyword_input_1"
                            android:textColorHint="#96a1ae"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="19dp"
                            android:background="@drawable/ic__3_icon_24_arrow_d_white"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/select_box_3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_round_10dp_2e323b"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/select_box_txt_3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:paddingHorizontal="19dp"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gowunbatang_regular"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:hint="@string/activity_keyword_input_2"
                            android:textColorHint="#96a1ae"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="19dp"
                            android:background="@drawable/ic__3_icon_24_arrow_d_white"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/select_box_4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_round_10dp_2e323b"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/select_box_txt_4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:paddingHorizontal="19dp"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gowunbatang_regular"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:hint="@string/activity_keyword_input_3"
                            android:textColorHint="#96a1ae"
                            />

                        <ImageView
                            android:id="@+id/btn_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="19dp"
                            android:background="@drawable/ic__3_icon_24_arrow_d_white" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/home_content_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/select_box_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_round_10dp_2e323b"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp">

                        <EditText
                            android:id="@+id/select_box_data"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:paddingHorizontal="19dp"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/gowunbatang_regular"
                            android:enabled="false"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:hint="2022-01-05"
                            android:textColorHint="#96a1ae"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="19dp"
                            android:background="@drawable/ic__3_icon_24_arrow_d_white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_keyword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/bg_round_10dp_2e323b"
                            android:fontFamily="@font/gowunbatang_regular"
                            android:gravity="top|left"
                            android:padding="10dp"
                            android:textColorHint="@color/app_disable_text_color"
                            android:hint="꿈꾼 내용을 생각나는 대로 20글자 이상 입력하세요.\n(분석후에는 새로 수정할 수 없습니다.)"
                            android:textColor="@color/white"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="30dp"
                            android:paddingBottom="5dp"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true">

                            <TextView
                                android:id="@+id/inputLength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/btn_ok_color"
                                android:fontFamily="@font/gowunbatang_regular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/200"
                                android:textColor="@color/app_disable_text_color"
                                android:fontFamily="@font/gowunbatang_regular"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/img_home"
            android:layout_below="@id/topLayout"
            android:layout_above="@id/inputLayout"/>


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>