<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_color">

    <com.google.android.material.appbar.AppBarLayout
        android:visibility="gone"
        android:id="@+id/collapsingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- parallax: 스크롤 시 접힘 -->
            <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/img_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_collapseMode="parallax"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/txt_select_result_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:background="#66000000"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:text="@string/fragment_home_result"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_select_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#66000000"
                    android:fontFamily="@font/gowunbatang_regular"
                    android:gravity="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:text="@string/fragment_home_result_2"
                    android:textColor="@color/white"
                    android:textSize="22dp" />


            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                android:minHeight="?attr/actionBarSize" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_menu" />


                    <TextView
                        android:id="@+id/btn_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/img_refresh"/>

                    <TextView
                        android:id="@+id/titleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/fragment_home_title"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gowunbatang_bold"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/frag_home_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/btn_mymong_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_bottom_left"
                style="@style/text_regular"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fragment_home_bottom_left"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_bottom_right"
                style="@style/text_regular"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fragment_home_bottom_right"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
            </RelativeLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/app_main_color"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/topLayout"
                    android:background="@color/app_main_color_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/btn_keyword_selectbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_keyword1"
                            style="@style/text_semibold"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:text="@string/fragment_home_keyword"
                            android:paddingVertical="15dp"/>
                        <View
                            android:id="@+id/view_under_line1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/btn_ok_color"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_keyword_inputbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_keyword2"
                            style="@style/text_semibold"
                            android:textSize="16dp"
                            android:textColor="@color/app_disable_text_color"
                            android:text="@string/activit_tab_story"
                            android:paddingVertical="15dp"/>
                        <View
                            android:id="@+id/view_under_line2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:visibility="invisible"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/btn_ok_color"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topLayout"
                    android:orientation="vertical"
                    android:background="@color/app_main_color">

                    <LinearLayout
                        android:id="@+id/home_content_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/select_box_1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_round_10dp_2e323b"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="25dp">

                            <TextView
                                android:id="@+id/select_box_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:enabled="false"
                                android:paddingHorizontal="19dp"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/gowunbatang_regular"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:hint="@string/fragment_home_hint"
                                android:textColorHint="#96a1ae"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="19dp"
                                android:background="@drawable/ic__3_icon_24_arrow_d_white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_box_2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_round_10dp_2e323b"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/select_box_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:enabled="false"
                                android:paddingHorizontal="19dp"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/gowunbatang_regular"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:hint="@string/fragment_home_hint_2"
                                android:textColorHint="#96a1ae"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="19dp"
                                android:background="@drawable/ic__3_icon_24_arrow_d_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_box_3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_round_10dp_2e323b"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/select_box_txt_3"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:enabled="false"
                                android:paddingHorizontal="19dp"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/gowunbatang_regular"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:hint="@string/fragment_home_hint_3"
                                android:textColorHint="#96a1ae"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="19dp"
                                android:background="@drawable/ic__3_icon_24_arrow_d_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_box_4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_round_10dp_2e323b"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/select_box_txt_4"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:enabled="false"
                                android:paddingHorizontal="19dp"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/gowunbatang_regular"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:hint="@string/fragment_home_hint_4"
                                android:textColorHint="#96a1ae"
                                />

                            <ImageView
                                android:id="@+id/btn_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="19dp"
                                android:background="@drawable/ic__3_icon_24_arrow_d_white" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_content_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--
                        <RelativeLayout
                            android:id="@+id/select_box_date"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_round_10dp_2e323b"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="25dp">

                            <EditText
                                android:id="@+id/select_box_data"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingHorizontal="19dp"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/gowunbatang_regular"
                                android:textColor="@color/white"
                                android:maxLines="1"
                                android:maxLength="4"
                                android:inputType="phone"
                                android:textSize="16dp"
                                android:text="2022"
                                android:textColorHint="#96a1ae"
                                />
                        </RelativeLayout>-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/btn_calendar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_round_10dp_stroke_4a4a4a"
                                    android:padding="11dp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@drawable/img_cal" />
                                </RelativeLayout>





                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.main.HomeLeftFragment">

        <EditText
            android:id="@+id/edt_keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AFAFAF"
            android:fontFamily="@font/gowunbatang_regular"
            android:gravity="top|left"
            android:hint="@string/fragment_home_keyword_2"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="#0F0F0F"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/inputLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/btn_ok_color"
                android:fontFamily="@font/gowunbatang_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/200"
                android:textColor="@color/app_disable_text_color"
                android:fontFamily="@font/gowunbatang_regular"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/bg_round_10dp_stroke_4a4a4a"
            android:padding="11dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/img_mic"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>